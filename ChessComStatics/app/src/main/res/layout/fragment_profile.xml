<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/avatarImageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/avatar_template"
            android:contentDescription="Player Avatar"
            android:layout_marginEnd="16dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="30sp"
                android:background="@drawable/title"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:padding="4dp"/>

            <TextView
                android:id="@+id/usernameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textColor="@color/black"
                android:textSize="30sp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/countryTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Country: Null"
            android:textSize="27sp"
            android:textColor="@color/black"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/statusTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: Null"
            android:textSize="27sp"
            android:textColor="@color/black"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/joinedTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Joined: Null"
            android:textColor="@color/black"
            android:textSize="27sp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/lastOnlineTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last time online: Null"
            android:textSize="27sp"
            android:textColor="@color/black"

            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/followersTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Followers: Null"
            android:textColor="@color/black"

            android:textSize="27sp" />
    </LinearLayout>


</LinearLayout>
